@import 'mixins'

#app > nav.nav
  display: block
  width: 60px
  border-box()
  padding: 10px
  box-shadow: inset -1px 0 2px rgba(0, 0, 0, 0.3)
  border-right: 1px solid rgba(0, 0, 0, 0.2)
  background: rgba(255, 255, 255, 0.2)
  text-align: center
  -webkit-border-radius: 4px 0 0 4px
  
  .avatar 
    cursor: pointer
  
    img
      width: 38px
      height: 38px
      border-radius(5px)
      box-shadow(0px, 1px, 2px, rgba(0, 0, 0, 0.3))
    
  .item 
    margin: 12px 0
    cursor: pointer
    position: relative    
    height: 25px
    background-position: center center
    background-repeat: no-repeat
    background-size: 25px 25px
    
    &[data-type=conversations]:after
      position: absolute
      right: -2px
      top: -5px
      display: block
      content: attr(data-count)
      border-radius(30px)
      padding: 0 5px
      text-shadow: 0 -1px 1px #46677F
      color: #FFF
      font-weight: bold
      font-size: 12px
      vbg-gradient(#7BB5DB, #4775B8)
      box-shadow(0, 1px, 1px, rgba(0,0,0,0.3))
      
    &[data-type=conversations]
      background-image: url(/assets/messages.png)
    
    &[data-type=starred]
      background-image: url(/assets/starred.png)
    
    &[data-type=activity]
      background-image: url(/assets/activity.png)
      
    &.active[data-type=conversations]
      background-image: url(/assets/messages-sel.png)

    &.active[data-type=starred]
      background-image: url(/assets/starred-sel.png)

    &.active[data-type=activity]
      background-image: url(/assets/activity-sel.png)
    